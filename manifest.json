{
    "manifest_version": 2,
    "name": "Chrome Web Store Opener",
    "version": "1.0",
    "description": "Open chrome web store by clicking on the icon in the toolbar section",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "browser_action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
      "default_title": "Open Chrome Web Store",
      "default_popup": ""
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": [
      "tabs"
    ]
  }
  